<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.android.example.census2021.RegisterActivity">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:text="Enumerator Registration" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="30dp"
            android:text=" Enter Enumerator Details"
            android:textAlignment="gravity"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="21sp"
            android:textStyle="bold" />




        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textAlignment="gravity"
            android:textSize="20dp"
            android:text=" Name" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="2dp"
            android:ems="16"
            android:inputType="textPersonName"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textAlignment="gravity"
            android:textSize="20dp"
            android:text=" Educational Qualification" />

        <EditText
            android:id="@+id/education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="2dp"
            android:ems="16"
            android:inputType="textPersonName"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textAlignment="gravity"
            android:textSize="20dp"
            android:text=" Sex" />



        <RadioGroup
            android:id="@+id/radio_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteY="284dp">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:onClick="sexButton"/>

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:onClick="sexButton"/>

            <RadioButton
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:onClick="sexButton"/>

        </RadioGroup>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textAlignment="gravity"
            android:textSize="20dp"
            android:text=" Phone Number" />


        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="2dp"
            android:ems="16"
            android:inputType="number"
            android:textSize="17dp" />



        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textAlignment="gravity"
            android:textSize="20dp"
            android:text=" Address" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="2dp"
            android:ems="16"
            android:inputType="textPersonName"
            android:textSize="17dp" />



        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="21sp"
            android:text=" Create Account" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textAlignment="gravity"
            android:textSize="20dp"
            android:text=" Enumerator ID" />

        <EditText
            android:id="@+id/enumid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="2dp"
            android:ems="16"
            android:inputType="textPersonName"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textAlignment="gravity"
            android:textSize="20dp"
            android:text=" Email Address" />

        <EditText
            android:id="@+id/enumemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="2dp"
            android:ems="16"
            android:inputType="textPersonName"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textAlignment="gravity"
            android:textSize="20dp"
            android:text=" Password" />

        <EditText
            android:id="@+id/enumpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="2dp"
            android:ems="16"
            android:inputType="textPersonName"
            android:textSize="17dp" />


        <Button
            android:id="@+id/btnregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:text="REGISTER" />



    </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
